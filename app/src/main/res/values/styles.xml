<resources>

    <style name="Widget.Theme.OmegaJoy.FullScreen.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_visibility_40</item>
    </style>

    <style name="Widget.Theme.OmegaJoy.FullScreen.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_visibility_40</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="RoundedRectangle">
        <item name="android:shape">rectangle</item>
        <item name="color">@color/light_gray_visibility_90</item>
        <item name="android:topLeftRadius">10dp</item>
        <item name="android:topRightRadius">10dp</item>
        <item name="android:bottomLeftRadius">10dp</item>
        <item name="android:bottomRightRadius">10dp</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Widget.SeekBar" parent="android:Widget.Material.SeekBar">
        <item name="trackHeight">14dp</item>
        <item name="thumbRadius">14dp</item>
        <!--        <item name="color"></item>-->
    </style>
</resources>
